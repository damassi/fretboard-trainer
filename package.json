{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext ts --ext tsx",
    "prettier-write": "prettier --write \"src/**/*.js\"",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "type-check": "yarn tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn prettier-write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/lodash": "^4.14.122",
    "@types/reach__router": "^1.2.3",
    "@types/rebass": "^3.0.3",
    "@types/redux": "^3.6.0",
    "@types/styled-components": "^4.1.12",
    "@types/webpack-env": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react-app": "^4.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "tslint-config-prettier": "^1.18.0"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.11.0",
    "@types/react": "16.8.7",
    "@types/react-dom": "16.8.2",
    "easy-peasy": "^1.14.1",
    "howler": "^2.1.1",
    "lodash": "^4.17.11",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8",
    "react-spring": "^8.0.14",
    "rebass": "^3.0.1",
    "redux": "^4.0.1",
    "redux-localstorage-simple": "^2.1.6",
    "redux-logger": "^3.0.6",
    "styled-components": "^4.1.3",
    "typescript": "3.3.3333"
  }
}
